<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Background Card View Style-->
    <style name="BackgroundCard" parent="CardView">
        <item name="android:layout_width">3000dp</item>
        <item name="android:layout_height">3000dp</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0.0px</item>
        <item name="android:elevation">8dp</item>
        <item name="android:rotation">-7</item>
        <item name="cardBackgroundColor">@color/colorAccent</item>
        <item name="cardElevation">10dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <!-- Small Screen Information Text View -->
    <style name="SmallScreenTexts">
        <item name="android:fontFamily">@font/caviar_dreams_bold_italic</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Small Screen Linear Layout -->
    <style name="SmallScreenLinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:elevation">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Small Screen Circular Image -->
    <style name="SmallScreenRoundPhoto">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:elevation">20dp</item>
        <item name="android:src">@drawable/my_image</item>
    </style>

    <!-- Small Screen Name Text View -->
    <style name="SmallScreenTexts.NameTextView">
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/england</item>
        <item name="android:elevation">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/extended_name</item>
        <item name="android:textSize">27sp</item>
    </style>

    <!-- Large Screen Information Text View -->
    <style name="LargeScreenTexts" parent="SmallScreenTexts">
        <item name="android:textSize">21sp</item>
    </style>

    <!-- Small Screen in Landscape Information Text View -->
    <style name="SmallScreenTexts.Landscape">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Large Screen in Landscape Information Text View -->
    <style name="LargeScreenTexts.Landscape">
        <item name="android:textSize">25sp</item>
    </style>

    <!-- Main Activity Button style -->
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:elevation">6dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">@font/pacifico</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
